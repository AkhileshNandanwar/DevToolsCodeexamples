<body>

  <div class="container">
    <h2>Buy Product</h2>
    <p><strong>Item:</strong> iPhone 16</p>
    <p><strong>Price:</strong> ₹99999</p>

    <!-- Hidden field that stores the price -->
    <form action="#" method="POST" onsubmit="showMessage(event)">
      <input type="hidden" name="price" value="99999">
      <button type="submit">Buy Now</button>
    </form>

    <p style="font-size: 0.9em; color: gray; margin-top: 10px;">
      Try: Right-click → Inspect → Elements panel → change the hidden field value.
    </p>

    <div id="message" style="margin-top:15px; color:green; font-weight:bold;"></div>
  </div>

  <script>
    function showMessage(e) {
      e.preventDefault();
      const price = document.querySelector('input[name="price"]').value;
      document.getElementById('message').innerText =
        `Form submitted with price = ₹${price}`;
    }
  </script>

</body>
