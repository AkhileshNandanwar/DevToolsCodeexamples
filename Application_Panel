    h2 { color: #333; }
    input { padding: 8px; width: 100%; margin: 6px 0; border-radius: 6px; border: 1px solid #ccc; }
    button { background: #28a745; color: white; padding: 10px 16px; border: none; border-radius: 6px; cursor: pointer; }
    button:hover { background: #218838; }
    #result { margin-top: 15px; font-weight: bold; color: green; }
