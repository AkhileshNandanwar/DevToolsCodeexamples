<body>
  <div class="card">
    <h2>Login (Demo)</h2>
    <p>Enter any username and password:</p>
    <input id="user" placeholder="Username" />
    <input id="pass" placeholder="Password" type="password" />
    <button onclick="login()">Login</button>
    <p id="result"></p>
  </div>

  <script>
    function login() {
      const username = document.getElementById('user').value;
      const password = document.getElementById('pass').value;

      // Simulated authentication (for demo only)
      if (username && password) {
        const token = "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.demo.fake.token123"; // looks like a JWT
        localStorage.setItem("authToken", token);
        document.getElementById('result').innerText = "✅ Logged in! Token stored in browser.";
      } else {
        document.getElementById('result').innerText = "❌ Enter username & password.";
      }
    }
  </script>
</body>
