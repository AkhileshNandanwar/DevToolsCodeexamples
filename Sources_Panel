  <script>
    // --- Vulnerable client-side logic (for demo only) ---
    function checkEligibility() {
      const salary = Number(document.getElementById('salary').value);
      let approved = false;

      // Client-side check — easy to tamper with via Sources panel
      if (salary >= 50000) {
        approved = true;
      }

      if (approved) {
        document.getElementById('result').innerText = "✅ Loan Approved!";
      } else {
        document.getElementById('result').innerText = "❌ Loan Rejected. Minimum salary ₹50,000 required.";
      }
    }
  </script>
