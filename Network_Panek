<body>
  <div class="card">
    <h2>Secure Checkout</h2>
    <p><strong>Product:</strong> SuperWidget</p>
    <p>Server controls the actual price — not stored in form.</p>

    <label>Quantity: 
      <input id="qty" type="number" value="1" min="1" style="width:60px;" />
    </label><br><br>

    <button onclick="createOrder()">Create Order</button>

    <p id="status"></p>

    <h4>Demo Notes:</h4>
    <pre>
Client sends: { productId: "widget-001", qty: 1 }
Server computes: total = db.price * qty
    </pre>
  </div>

  <script>
    async function createOrder() {
      const qty = Number(document.getElementById('qty').value) || 1;
      const payload = { productId: 'widget-001', qty };

      document.getElementById('status').innerText = '⏳ Sending order to server...';

      try {
        const res = await fetch('https://jsonplaceholder.typicode.com/posts', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify(payload)
        });

        if (res.ok) {
          document.getElementById('status').innerText =
            '✅ Request sent — server decides final price securely.';
        } else {
          document.getElementById('status').innerText = '❌ Request failed.';
        }
      } catch (e) {
        document.getElementById('status').innerText = '⚠️ Error: ' + e.message;
      }
    }
  </script>
</body>
