    <h2>ðŸ’° Loan Application</h2>
    <p>Enter your salary and check your loan eligibility.</p>
    <input type="number" id="salary" placeholder="Enter Salary (â‚¹)" value="40000" />
    <button onclick="checkEligibility()">Check Eligibility</button>
    <div id="result">Waiting for input...</div>
  </div>

  <script>
    async function checkEligibility() {
      const salary = document.getElementById("salary").value;
      document.getElementById("result").textContent = "Sending request...";
      
      // Fake API call to simulate a real server
      const response = await fetch("https://reqres.in/api/checkLoan", {
        method: "POST",
        headers: { "Content-Type": "application/json" },
        body: JSON.stringify({ salary: Number(salary) })
      });

      // Fake server logic (for demo only)
      const approved = salary >= 80000;
      const data = { approved, salary };

      document.getElementById("result").innerText = 
        `Response: approved=${data.approved}\n(salary sent=${data.salary})`;
    }
  </script>
